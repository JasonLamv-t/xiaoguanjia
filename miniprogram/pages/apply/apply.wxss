/* miniprogram/pages/wantDGUTbatter/wantDGUTbetter.wxss */
page {
  background-color: #f2f4f6;
}

.page {
  width: 100%;
  height: 100%;
  background-color: #f2f4f6;
}

.tabs {
  width: 100%;
  height: 36px;
  line-height: 32px;
  display: inline-flex;
}

.weui-tabs-swiper-0 {
  height: 100rpx;
}

.swiper-item {
  height: 100%;
}

.weui-tabs-bar__content {
  display: inline-flex;
}

.weui-tabs-bar__item {
  width: 33%;
  margin: 0 auto;
  text-align: center;
}

.tab-bar-title__selected {
  font-weight: bold;
}

.cell {
  width: 100%;
  height: 100px;
  display: inline-flex;
  margin-top: 10px;
  /* border: solid 1rpx black; */
  background-color: white;
}

.cell-left {
  width: 86%;
  height: min-content;
  margin: auto auto;
  /* border: solid 1rpx black; */
}

.cell-title {
  display: inline-flex;
  font-size: 16px;
  font-weight: 500;
  line-height: 18px;
}

.cell-flag{
  width: 46px;
  height: 18px;
  line-height: 18px;
  font-size: 11px;
  font-weight: 400;
  margin: auto 8px;
  text-align: center;
  color: white;
  background-color: #00CC65;
  border-radius: 9px;
}

.cell-desc{
  font-size: 14px;
  color: #888888;
}

.cell-right-icon {
  margin: auto 0;
  margin-right: 4px;
  margin-left: auto;
  color: #d8d8d8;
}

.actionsheet {
  width: 90%;
  padding: 0 5%;
  display: inline-flex;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  color: #4814FF;
  background-color: white;
  border-radius: 20px 20px 0 0;
  border: solid 1rpx #E5E5E5;
}

.addButton{
  width: 100%;
  height: 60px;
  line-height: 60px;
  text-align: center;
}