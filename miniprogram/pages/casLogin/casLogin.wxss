/* miniprogram/pages/casLogin/casLogin.wxss */

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  color: black;
}

.bk {
  position: fixed;
  z-index: -1;
}

.bk-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -2;
  background: linear-gradient(to top, #00B4FF, #132193);
  background-color: #132193;
  opacity: .8;
}

.bk-image {
  width: 100vw;
  height: 90vw;
  position: fixed;
  bottom: 0;
  z-index: -3;
}

.top {
  width: 210px;
  height: 50px;
  display: flex;
  flex-direction: row;
  margin: auto auto;
  margin-top: 65px;
  /* border: solid 1rpx #000; */
  /* z-index: 1; */
}

.top-logo {
  width: 50px;
  height: 48px;
  margin: auto auto;
}

.top-name {
  width: 160px;
  height: 42px;
  margin: auto auto;
}

.main {
  display: flex;
  flex-direction: column;
  color: white;
}

.main-title {
  width: 260px;
  height: 50px;
  display: flex;
  flex-direction: row;
  margin: 5px auto;
  margin-bottom: 25px;
  font-size: 24px;
  line-height: 24px;
}

.main-line {
  width: 50px;
  height: 1rpx;
  margin: auto auto;
  border-bottom: solid 1rpx white;
  opacity: .8;
}

.main-inputArea {
  width: 250px;
  height: 40px;
  display: flex;
  margin: 8px auto;
  background-color: rgba(255, 255, 255, .38);
  border-radius: 5px;
  /* border: solid 1px white; */
}

.main-icon {
  font-size: 20px;
  line-height: 20px;
  display: flex;
  margin: auto auto;
  margin-right: 10px;
  color: white;
}

.main-input {
  width: 200px;
  height: 25px;
  margin: auto auto;
  margin-left: 0;
  font-size: 15px;
}

.main-button {
  width: 184px;
  height: 40px;
  margin-top: 10px;
  color: #0F54A1;
  line-height: 40px;
  font-weight: 700;
  font-size: 17px;
  background-color: rgba(255, 255, 255, .85);
  border-radius: 4px;
}

.help {
  width: 250px;
  height: 15px;
  display: flex;
  flex-direction: row-reverse;
  margin: 2px auto;
  font-size: 15px;
  line-height: 15px;
}

.help-title {
  font-weight: 600;
  margin-top: 15rpx;
  color: black;
}