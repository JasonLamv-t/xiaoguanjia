/* pages/user/user.wxss */

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.top-background {
  width: 100%;
  height: 280rpx;
  position: absolute;
  background-color: #424EA9;
  z-index: -9;
}

.user {
  width: 90%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  margin: auto auto;
  /* border: solid 1rpx #000; */
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  display: flex;
  margin-top: 28rpx;
  margin-left: 48rpx;
  background-size: cover;
  background-color: white;
  overflow: hidden;
  border-radius: 50%;
}

.user-nickname {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
  margin: auto auto;
  margin-left: 24rpx;
  color: white;
  /* border: solid 1rpx #000; */
}

.user-data{
  display: flex;
  flex-direction: column;
  margin: auto auto;
  margin-left: 24rpx;
}

.userData{
  height: 32rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: white;
}

.user-IDCard{
  font-size: 54rpx;
  color: white;
  margin: auto auto;
  margin-right: 20rpx;
}

.list {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: auto auto;
  margin-top: 32rpx;
  border-radius: 25rpx;
  background-color: white;
  box-shadow: 2rpx 4rpx 10rpx #ccc;
}

.custom-button {
  width: 100%;
  height: 95rpx;
  padding: 0;
  display: flex;
  text-align: center;
  font-weight: 400;
  color: #707070;
  background: none;
  border-radius: 25rpx;
  /* border: solid 1rpx #000; */
}

.custom-button::after{
  border: none;
}

.custom-button-icon {
  width: 10rpx;
  font-size: 40rpx;
  margin: auto auto;
  margin-left: 30rpx;
  margin-right: 20rpx;
  line-height: 40rpx;
  vertical-align: middle;
}

.custom-button-text {
  margin: auto auto;
  margin-left: 24rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

.custom-button-foot {
  width: 10rpx;
  font-size: 36rpx;
  margin: auto auto;
  margin-right: 48rpx;
  line-height: 40rpx;
  vertical-align: middle;
  color: #bbbbbb;
}